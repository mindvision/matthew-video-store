	<!-- Collect the nav links, forms, and other content for toggling -->
	<div class="col-sm-7 col-md-7 col-lg-7" id="search">
	  <form class="form-inline my-2 my-lg-0 navbar-center"
		action="/videos/"
		method="GET">
	    <input class="form-control mr-sm-6"
		   type="text" name="search_string"
		   placeholder="Keyword Search">
	    <div class="checkbox">
	      <% fields = ["title", "actors", "theme"] %>
	      <% fields.each do |field| %>
	      <label> 
		<%= field %>
		<input type="checkbox"
		       name=<%="#{field}"%>
		       value=true
		       method="GET">
	      </label>
	      <% end %>
	      <button class="btn btn-outline-success my-2 my-sm-0"
		      id="header-button"
		      type="submit"
		      name="commit"
		      value="site_search">Site Search
	      </button>
	    </div>
	  </form>
	</div>
	
