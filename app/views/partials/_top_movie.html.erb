    <div class="container">
      <div class="card">
	<div class="container-fliud">
	  <div class="wrapper row">
	    <div class="preview col-md-4">
	      
	      <div class="preview-pic tab-content">
		<div class="tab-pane active" id="pic-1"><%= link_to image_tag(top_movie[:thumbnail],
							    size: "300x444",   alt: "image missing"),
							    videos_path %>
		</div>
	      </div>
	    </div>
	    <div class="details col-md-6">
	      <h3 class="product-title"><%= link_to top_movie[:title],
					    'http://www.imdb.com/title/tt0088247/' %>
	<date style="font-size:16px">(<%= top_movie[:release_date] %>)</date></h3>
	      <p> <strong><%= top_movie[:actors] %></strong></p>
	      <div class="rating">
		<div class="stars">
		  <% top_movie[:stars].each do |star| %>
		  <span class="fa <%= star %>"></span>
		  <% end %>
		  <span class="review-no"><%= "(#{rand(80..100)} " %> reviews) </span>
		</div>
			      </div>
	      <p class="product-description"><%= top_movie[:genre] %></p>
	      <p class="product-description"><%= top_movie[:description].truncate(150) %></p>
	      <h5 class="colors"><%= top_movie[:content_rating] %>
		<span class="color orange not-available"
		      data-toggle="tooltip"
		      title="Not In store"></span>
		<span class="color green"></span>
		<span class="color blue"></span>
	      </h5>
	      <h4 class="price">current price: <span>$<%= rand(50..80) %></span></h4>
	      <p class="vote"><strong><%= rand(50..100) %>%</strong> of viewers enjoyed this movie!
		<strong>(<%= rand(100..1000) %> votes)</strong></p>
	      <h5 class="sizes">format:
		<span class="size" data-toggle="tooltip" title="small">VHS</span>
		<span class="size" data-toggle="tooltip" title="medium">Beta</span>
		<span class="size" data-toggle="tooltip" title="large">Blu-ray</span>
	      </h5>
	      <div class="action">
		<button class="add-to-cart btn btn-default" type="button">add to cart</button>
		<button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
	      </div>
	    </div>
	  </div>
	</div>
      </div>
    </div>
